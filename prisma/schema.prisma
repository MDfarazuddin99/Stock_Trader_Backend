datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-py"
}

model TradeHistory {
  id        Int      @id @default(autoincrement())
  symbol    String
  quantity  Int
  price     Float
  action    String
  timestamp DateTime @default(now())
}

model Portfolio {
  id           Int    @id @default(autoincrement())
  symbol       String @unique
  quantity     Int
  averagePrice Float
}